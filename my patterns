using function:
#include <stdio.h>
int pattern()
{
    int i,j,space,rows;
    printf("enter the no of rows:");
    scanf("%d",&rows);
    for(i=1;i<=rows;i++)
    {
        for(space=1;space<=rows-i;space++)
        {
            printf(" ");  
        }
        for(j=1;j<=2*i-1;j++)
        {
    printf("p");
    
}
printf("\n");
}
}
int main()
{
  pattern();
  pattern();
  pattern();
}



without functions:

#include <stdio.h>
int main()
{
    int i,j,space,rows;
    printf("enter the no of rows:");
    scanf("%d",&rows);
    for(i=1;i<=rows;i++)
    {
        for(space=1;space<=rows-i;space++)
        {
            printf(" ");  
        }
        for(j=1;j<=2*i-1;j++)
        {
    printf("*");
    
}
printf("\n");
}
}

reverse the patterns: triangle:
#include <stdio.h>
int main()
{
    int i,j,space,rows;
    printf("enter the no of rows:");
    scanf("%d",&rows);
    for(i=rows;i>=1;i--)
    {
        for(space=1;space<=rows-i;space++)
        {
            printf(" ");  
        }
        for(j=1;j<=2*i-1;j++)
        {
    printf("*");
    
}
printf("\n");
}
}



pattern program:




#include<stdio.h>
int main()
{
    int i,j,var;
    printf("enter the number: ");
    scanf("%d",&var);
    if(var%10==0)
    {
    for (i='a'; i<='e'; i++)
    {
        for (j='a'; j<=i; j++)
        {
            printf("%c", j);
        }
        printf("\n");
    }
    return 0;
}
}
